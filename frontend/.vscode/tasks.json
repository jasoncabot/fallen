{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"path": "${workspaceFolder}",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "NODE_ENV=development webpack serve --config config/webpack.dev.js",
						"endsPattern": "webpack .* compiled successfully in .* ms",
					}
				}
			],
			"group": "build",
			"label": "npm: start - frontend",
			"detail": "NODE_ENV=development webpack serve --config config/webpack.dev.js"
		}
	]
}