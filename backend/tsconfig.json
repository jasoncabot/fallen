{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "types": [
            "@cloudflare/workers-types"
        ],
        "moduleResolution": "node",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@app/backend/*": [
                "src/*"
            ],
            "@app/shared/*": [
                "./../shared/src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "bindings.d.ts"
    ]
}
