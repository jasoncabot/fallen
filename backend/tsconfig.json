{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@shared/*": [
                "./../../shared/dist/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/custom.d.ts"
    ],
    "exclude": [
        "src/client",
        "node_modules",
        "dist"
    ]
}